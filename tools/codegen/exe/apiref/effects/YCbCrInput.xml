<Effect>
    <!-- Localization -->
    <_locDefinition>
        <_locDefault _loc="locNone" />
        <_locTag _locAttrData="displayname">Field</_locTag>
        <_locTag _locAttrData="name">Input</_locTag>
        <_locTag _locAttrData="value">Property</_locTag>
    </_locDefinition>

    <!-- System Properties -->
    <Property name='DisplayName' type='string' value='YCbCrInput'/>
    <Property name='Author' type='string' value='Microsoft Corporation'/>
    <Property name='Category' type='string' value='Color'/>
    <Property name='Description' type='string' value='An Effect that takes various YCbCr image formats and outputs sRGB.'/>
    <Inputs minimum="1" maximum="3">
        <Input name='YCbCr Plane 1'/>
        <Input name='YCbCr Plane 2'/>
        <Input name='YCbCr Plane 3'/>
    </Inputs>
    <!-- Custom Properties -->
    <Property name='ChannelLayout' type='enum'>
        <Property name='DisplayName' type='string' value='Channel Layout'/>
        <Property name="Default" type="enum" value="5" />
        <Fields>
            <Field displayname='Interleaved Yuy2' index='0'/>
            <Field displayname='Interleaved Yuy2 Odd Width' index='1'/>
            <Field displayname='Interleaved Ayuv' index='2'/>
            <Field displayname='Planar 444' index='3'/>
            <Field displayname='Planar 440' index='4'/>
            <Field displayname='Planar 422' index='5'/>
            <Field displayname='Planar 420' index='6'/>
        </Fields>
    </Property>
    <Property name='ChromaCositing' type='enum'>
        <Property name='DisplayName' type='string' value='Chroma Cositing'/>
        <Property name="Default" type="enum" value="0" />
        <Fields>
            <Field displayname='None' index='0'/>
            <Field displayname='Horizontal' index='1'/>
        </Fields>
    </Property>
    <Property name='TransferMatrix' type='enum'>
        <Property name='DisplayName' type='string' value='Transfer Matrix'/>
        <Property name="Default" type="enum" value="1" />
        <Fields>
            <Field name='None'     displayname='None'      index='0'/>
            <Field name='BT601'    displayname='Bt601'     index='1'/>
            <Field name='BT709'    displayname='Bt709'     index='2'/>
        </Fields>
    </Property>
    <Property name='PrimaryConversion' type='enum'>
        <Property name='DisplayName' type='string' value='Primary Conversion Function'/>
        <Property name="Default" type="enum" value="0" />
        <Fields>
            <Field name='None'       displayname='None'     index='0'/>
            <Field name='LQBT601'    displayname='Lq Bt601 To Bt709'     index='1'/>
            <Field name='HQBT601'    displayname='Hq Bt601 To Bt709'     index='2'/>
        </Fields>
    </Property>
    <Property name='NominalRange' type='enum'>
        <Property name='DisplayName' type='string' value='Input Nominal Range'/>
        <Property name="Default" type="enum" value="0" />
        <Fields>
            <Field name='Full'       displayname='0 255'            index='0'/>
            <Field name='Video'      displayname='16 235'           index='1'/>
        </Fields>
    </Property>
    <Property name="AffineTransformMatrix" type="matrix3x2">
        <Property name="DisplayName" type="string" value="Affine Transform Matrix" />
        <Property name="Default" type="matrix3x2" value="(1, 0, 0, 1, 0, 0)" />
    </Property>
</Effect>
