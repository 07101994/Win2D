<Effect>
    <!-- Localization -->
    <_locDefinition>
        <_locDefault _loc="locNone" />
        <_locTag _locAttrData="displayname">Field</_locTag>
        <_locTag _locAttrData="name">Input</_locTag>
        <_locTag _locAttrData="value">Property</_locTag>
    </_locDefinition>
    <!-- System Properties -->
    <Property name="DisplayName" type="string" value="Highlights and Shadows" />
    <Property name="Author" type="string" value="Microsoft Corporation" />
    <Property name="Category" type="string" value="Photo" />
    <Property name="Description" type="string" value="Adjusts the highlight and shadow strength of an image." />
    <Inputs>
        <Input name="Source" />
    </Inputs>
    <!-- Custom Properties -->
    <Property name="Highlights" type="float">
        <Property name="DisplayName" type="string" value="Highlights" />
        <Property name="Min" type="float" value="-1.0" />
        <Property name="Max" type="float" value="1.0" />
        <Property name="Default" type="float" value="0.0" />
    </Property>
    <Property name="Shadows" type="float">
        <Property name="DisplayName" type="string" value="Shadows" />
        <Property name="Min" type="float" value="-1.0" />
        <Property name="Max" type="float" value="1.0" />
        <Property name="Default" type="float" value="0.0" />
    </Property>
    <Property name="Clarity" type="float">
        <Property name="DisplayName" type="string" value="Clarity" />
        <Property name="Min" type="float" value="-1.0" />
        <Property name="Max" type="float" value="1.0" />
        <Property name="Default" type="float" value="0.0" />
    </Property>
    <Property name="InputGamma" type="enum">
        <Property name="DisplayName" type="string" value="Input Gamma" />
        <Property name="Default" type="enum" value="1" />
        <Fields>
            <Field name='Linear' displayname='Linear' index="0" />
            <Field name='sRGB' displayname='sRGB' index="1" />
        </Fields>
    </Property>
    <Property name="MaskBlurRadius" type="float">
        <Property name="DisplayName" type="string" value="Mask Blur Radius" />
        <Property name="Min" type="float" value="0.0" />
        <Property name="Max" type="float" value="10.0" />
        <Property name="Default" type="float" value="1.25" />
    </Property>
</Effect>
